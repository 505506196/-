.container {
  display: flex;
  flex: 1;
  flex-direction: column;
  min-height: 100%;
  font-size: 32rpx;
}
.head {
  line-height: 1;
}
.body {
  padding-left: 30rpx;
  padding-right: 30rpx;
  flex: 1;
  overflow: auto;
}
.img{
    width: 100%;
    height: 180px;
}
.board {
  margin-top: 5rpx;
  margin-bottom: 5rpx;
  background-color: #f1f1f1;
  border-bottom: 1px #d2d2d2 solid;
  overflow: hidden;
  border-radius: 1rpx;
  cursor: pointer;
}
.board-info {
  display: flex;
  padding: 1rpx;
  align-items: center;
  flex-direction: row;
}
.board-name {
  flex: 1;
	font-family: Microsoft YaHei;
	font-size: 15px;
	line-height: 44px;
	text-indent: 1em;
	font-weight: bold;
}
.board-img {
  width: 80rpx;
  height: 60rpx;
}
